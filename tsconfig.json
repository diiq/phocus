{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "amd",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react",
    "baseUrl": "./src",
    "sourceRoot": "./src",
    "noUnusedLocals": true,
    "outDir": "./dist"
  }
}
